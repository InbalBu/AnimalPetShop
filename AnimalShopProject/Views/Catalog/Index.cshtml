@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model IEnumerable<AnimalShopProject.Models.Animal>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/css/homepage.css" rel="stylesheet" type="text/css" asp-append-version="true">

</head>
<body>
    <h1 class="header">The Best Pet Shop In Town!</h1>
    <p class="p">Please select a category:</p>

            <form action="/Catalog/Index" method="post">

            <fieldset>Category <select id="Category" name="Category">

            <option value="">All categories</option>

            <option value="Birds">Birds</option>

            <option value="Dogs">Dogs</option>

            <option value="Cats">Cats</option>

            </select>

            <p><input type="submit" value="Submit" /> </p>

            </fieldset>

            </form>
       

    @foreach (var animal in Model)
    {
      <table class="table table-bordered table-responsive">
      <tr>
        <th>Portrait</th>
        <th>Name</th>
        <th>View more and comment</th>
      </tr>
      <tr>
        <td> <img class="images" src=" @animal.PictureName"/></td>
        <td>@animal.Name</td>
         <td><a class="btn btn-outline-success active" role="button" asp-action="AnimalCard" asp-route-animalId="@animal.Id" asp-controller="catalog">Details</a></td>
      </tr>

    </table> 

    }

 
    
</body>
</html>

