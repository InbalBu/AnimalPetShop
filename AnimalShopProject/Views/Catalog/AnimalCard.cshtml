@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model AnimalShopProject.Models.Animal

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/css/homepage.css" rel="stylesheet" type="text/css" asp-append-version="true">

</head>
<body>
    <h1>The Best Pet Shop In Town!</h1>

        <div class="row">
            <div class="column">
                <img class="images" @Html.DisplayNameFor(c => c.PictureName): src=" @Model.PictureName"/>
            </div>
        </div>
        
        <div> @Html.DisplayNameFor(c => c.Name): @Model.Name
            @Html.DisplayNameFor(c => c.Age): Age: @Model.Age 
            @Html.DisplayNameFor(c => c.Description): Description: @Model.Description 
          </div>

         All Comments:
        @foreach (var comment in Model.Comments!)
        {
            <div>
                 @comment.Text
            </div>
        }

        Add comment: 
    @using(Html.BeginForm("AddComment", "Catalog", new {animalId=Model.Id}, FormMethod.Post))
    {
        @Html.TextBox("comment", null, new {animalId=Model.Id})

        <input type="submit" value="Add Comment"/>
    }

     <a asp-action="Index"  asp-controller="Catalog">Back</a>

    
</body>
</html>

